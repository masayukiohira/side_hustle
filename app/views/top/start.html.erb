<div class="container" style="background-image: url(<%= asset_path "martin-wessely-243-unsplash.jpg" %>); background-size: cover">
	<div class="row" style="padding: 100px 0 150px 0;">
		<div class="text-center col-xs-12" style="color: white;">
			<h1>
				副業ポータル
			</h1>
		</div>
		<div>
			<%= image_tag("layers-512.png", :size => "100x300", class: "col-xs-8 col-xs-offset-2") %>
		</div>
	<div class="col-xs-6">
	  <% if !@posts.empty? %>
		<div>
			<%= link_to '副業を知る', timeline_posts_path, class: "btn-lg btn-ghost btn-white col-xs-6 col-xs-offset-3 text-center" %>
		</div>
	  <% else %>
		<div>
			<%= link_to '副業を知る', search_posts_path, class: "btn-lg btn-ghost btn-white col-xs-6 col-xs-offset-3 text-center" %>
		</div>
	  <% end %>
	</div>
	<div class="col-xs-6">
		<div>
	 		<%= link_to '副業と確定申告', confirm_top_path, class: "btn-lg btn-ghost btn-white col-xs-6 col-xs-offset-3 text-center" %>
	 	</div>
	</div>
	</div>
</div>
