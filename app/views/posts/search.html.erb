<% title '検索' %>

<div class="container" style="background-image: url(<%= asset_path "antoine-beauvillain-759-unsplash.jpg" %>); background-size: cover">
	<div class="row" style="padding: 100px 0 150px 0;">
		<div class="text-center col-xs-12" style="color: white;">
			<h1>
				ユーザーの投稿を検索
			</h1>
		</div>
		<div>
			<%= image_tag("layers-512.png", :size => "100x300", class: "col-xs-8 col-xs-offset-2") %>
		</div>
			<div class="col-xs-4" style="padding-top: 30px;">
			<div class="btn btn-ghost btn-white col-xs-8 col-xs-offset-2 text-center">
	    		<%= link_to category_posts_path do %>
	    		<div style="color: white;">カテゴリ検索</div>
	    		<% end %>
	    	</div>
		</div>
		<div class="col-xs-4" style="padding-top: 30px;">
			<div class="btn btn-ghost btn-white col-xs-8 col-xs-offset-2 text-center">
				<%= link_to users_path({"utf8"=>"✓", "q"=>{"title_cont"=>"注目サイドハスラー", "commit"=>"Search" }}) do %>
	    		<div style="color: white;">注目サイドハスラー</div>
	    		<% end %>
	    	</div>
		</div>
		<div class="col-xs-4" style="padding-top: 30px;">
			<%= search_form_for @q do |f| %>
				<div class="col-xs-12 text-center">
            		<%= f.text_field :title_or_body_or_category_cont, :placeholder => "キーワード検索", :size => "15x10"%>
            		<button type="submit" class="btn btn-ghost" style="color: white;">
        				<i class="glyphicon glyphicon-search"></i>
					</button>
   				</div>
      		<% end %>
		</div>
	</div>
</div>

