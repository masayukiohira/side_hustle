<% title "新規投稿" %>

<div class="container">
	<div class="row">
	  <div class="col-xs-10 col-xs-offset-1">
	  	<% if notice %>
			<p class="alert alert-success"><%= notice %></p>
  	　　 <% else %>
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>" >
					<%= value %>
				</div>
			<% end %>
		<% end %>
	  <%= form_for @post do |f| %>
		<div>
		  <%= f.label :"カテゴリ"%><br>
 		  <%= f.select :category, [
  			["クラウドソーシング", "クラウドソーシング"],
  			["アンケートモニター", "アンケートモニター"],
  			["ポイントサイト", "ポイントサイト"],
  			["シェアリングエコノミー", "シェアリングエコノミー"],
  			["せどり", "せどり"],
  			["アフィリエイト", "アフィリエイト"],
  			["株式", "株式"],
  			["FX", "FX"],
  			["仮想通貨", "仮想通貨"],
  			["不動産投資", "不動産投資"],
  			["その他", "その他"],
  			], class: "form-control"%>
  		</div>

		<div>
		  <%= f.label :"タイトル" %><br>
		  <%= f.text_field :title, class: "form-control", :placeholder => "20文字以内" %>
	    </div>

	    <div>
		  <%= f.label :"イメージ" %><br>
    	  <%= f.attachment_field :image %>
        </div>

        <div>
		  <%= f.label :"本文" %><br>
		  <%= f.text_area :body, class: "form-control", :placeholder => "140文字以内", :size => "100x10" %>
		</div>
		<div style="padding-top: 30px;">
		  <%= f.submit "投稿する", class: "btn btn-info" %>
	    </div>
      <% end %>
	  </div>
	</div>
</div>
















