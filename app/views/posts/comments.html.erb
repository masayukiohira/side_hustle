<% title "コメント" %>

<div class="container" style="padding-bottom: 100px;">
	<div class="row">
		<div>
		  <%= link_to post_path(@post.id) do %>
			<%= attachment_image_tag @post, :image, format: 'jpeg', fallback:"noimage2.jpeg", size: '200x375', class: "col-xs-12" %><br>
		  <% end %>
		   	タイトル：<%= @post.title %>
		</div>
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>" >
				<%= value %>
			</div>
	    <% end %>
  <% if !@comments.empty? %>
	<% @comments.each do |comment| %>
     <% if comment.user.unsubscribe == false %>
	  <div class="row">
		<div class="col-xs-3">
			<%= link_to user_path(comment.user.id) do %>
				<%= attachment_image_tag comment.user, :image, format: 'jpeg', fallback:"noimage.jpeg", class: "col-xs-12", :style => "border-radius: 50%;", size: "200x200" %><br>
		</div>
		<div class="col-xs-9">
			<div class="col-xs-8">
				<%= comment.user.name %><br>
			<% end %>
				<%= comment.body %>
			</div>
			<div class="col-xs-4">
	  		<% if !(comment.user == current_user) %>
	  		  <% if comment.user.followed_by?(current_user) %>
	  	  		<div>
             		<%= link_to "フォロー", user_follows_path(comment.user), method: :delete, class: "btn-sm btn-info col-xs-10 col-xs-offset-1 text-center", "data-confirm" => "フォロー解除しますか？" %>
          		</div>
        	  <% else %>
          		<div>
            		<%= link_to "フォロー", user_follows_path(comment.user), method: :post, class: "btn-sm btn-default col-xs-10 col-xs-offset-1 text-center", "data-confirm" => "フォローしますか？" %>
          		</div>
	  		  <% end %>
	  		<% else %>
	  		<% end %>
	  		</div>
		</div>
	  </div>
	 <% else %>
	  <div class="row">
	  	<div class="col-xs-3">
			<%= attachment_image_tag comment.user, :image, format: 'jpeg', fallback:"noimage.jpeg", :style => "border-radius: 50%;", size: "200x200" %><br>
		</div>
		<div class="col-xs-9">
		  	<div class="col-xs-8">
				退会ユーザー<br>
		  	</div>
		</div>
	  </div>
     <% end %>
	<% end %>
  <% else %>
		<h4>コメントはまだありません。</h4>
  <% end %>
</div>
</div>