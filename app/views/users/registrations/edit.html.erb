<% title "プロフィール編集" %>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
    <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
      <%= f.label :プロフィール画像 %><br>
    <%= f.attachment_field :image %>
  </div>
  <div>
    <%= f.label :自己紹介 %><br>
    <%= f.text_area :introduction, :size => "50x10" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "入力してください", size: "30x2" %>
  </div>

  <div class="field">
    <i style="font-weight: bold;">新しい</i><%= f.label :password %> <br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "変更時のみ入力", size: "30x2" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", size: "30x2" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: "btn btn-danger" %>

    <%= link_to user_path(@user) do %>
      <div class="btn btn-info">プロフィールに戻る</div>
    <% end %>
  </div>
<% end %>

    </div>
  </div>
</div>
