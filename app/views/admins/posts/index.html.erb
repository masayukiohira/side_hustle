<% title '投稿一覧' %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<table align="right">
					<tr>
						<th>並び替え</th>
						<th><%= sort_link(@q, :likes_count, "いいね！") %></th>
						<th><%= sort_link(@q, :comments_count, "コメント") %></th>
					</tr>
			</table>
		</div>
		<div class="colxs-12">
			<% @posts.each do |post| %>
				<div class="col-xs-4 p-0">
					<%= link_to post_path(post.id) do %>
						<%= attachment_image_tag post, :image, format: 'jpeg',fallback:"noimage2.jpeg", size: "250x250" %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>